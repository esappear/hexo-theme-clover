<nav id="nav">
  <a href="/" class="title"><%= theme.nav.title %></a>
  <div class="ctnWrap">
    <div class="icons">
      <% if (theme.social) { %>
        <% _.forEach(theme.social, function(value, key) { %>
          <% if (value) { %>
            <a href="<%= value %>" target="_blank" class="nav-icn iconfont icon-<%= key.toLowerCase() %>"></a>
          <% } %>
        <% }); %>
      <% } %>
    </div>
    <div class="menu">
      <% if (theme.menu) { %>
        <% _.forEach(theme.menu, function(value, key) {
          value = value.path || value;
          if (value) { %>
            <a href="<%= value %>" class="nav-menu <%= is_current(value) ? 'z-active' : '' %>"><%= key.toUpperCase() %></a>
          <% } %>
        <% }); %>
      <% } %>
    </div>
  </div>
</nav>